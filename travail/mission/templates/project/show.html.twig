{% extends 'base.html.twig' %}

{% block title %}{{ project.title }}{% endblock %}

{% block nav %}
    {% include 'nav.html.twig' with {'activeRoute': 'app_project_index'} %}
{% endblock %}

{% block header %} 
    <div class="flex-header">
        <h1>{% block header_title %}{{ project.title }}{% endblock %}</h1>
        <div class="user-list">
            {% for user in project.users %}
                <div class="avatar">{{ user.initials }}</div>
            {% endfor %}
        </div>
        <a class="button" data-turbo="false" href="{{ path('app_project_edit', {'id': project.id}) }}">Modifier</a>
    </div>
{% endblock %}

{% block content %}
    <div id="tasks-container">
        {% for category in categories %}
            {% include 'task/_category_card.html.twig' with {'category': category, 'tasks': category.tasks} %}
        {% endfor %}
    </div>

{% endblock %}
