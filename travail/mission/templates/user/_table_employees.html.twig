<table id="team-container">
    <thead>
        <tr>
            <th>Prénom, Nom</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for employee in employees %}
            <tr>
                <td>
                    <div class="employee-infos">
                        <div class="employee-avatar">
                            {{ employee.initials }}
                        </div>
                        <div class="employee-coords">
                            <strong>{{ employee.firstName }} {{ employee.lastName }}</strong>
                            <span>{{ employee.email }}</span>
                        </div>
                    </div>
                </td>
                <td>{{ employee.status.value }}</td>
                <td>
                    <a class="button button-edit-team" href="{{ path('app_user_edit', {'id': employee.id}) }}">
                    Éditer
                    </a>
                    <form method="post" action="{{ path('app_user_delete', {'id': employee.id}) }}" style="display:inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet employé ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employee.id) }}">
                        <button class="delete-team" type="submit">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>